{{log activeUser}}

<div class="d-flex flex-column flex-md-row">
    <!-- The following image should change based on user's Power Level-->
    <!-- images are in the images folder -->
    <!-- The avatars go in this order: bronze, silver, gold, jewel -->
    <img src="../../public/images/goldAvatar.PNG" class="img-fluid w-25">
    <div class="d-flex justify-content-center align-items-center flex-column p-3 w-100">
        <h3 class="text-center color-amaranth display-3 display-md-2 ">{{activeUser.dataValues.user_name}}</h3>
        <!-- replace the number in the following line with a variable for the power level -->
        <h4 id="powerLevel" data-powerlevel="{{activeUser.dataValues.power_level}}" class="text-center fs-3 fs-md-2">Nerd Level: {{activeUser.dataValues.power_level}}</h4>
    </div>
</div>
<div class="text-center m-4">
    <a href="./categories"><button class="btn btn-primary m-4 btn-color-blue-crayola btn-lg text-center">Take a Quiz</button></a>
    {{!-- <a href="./create"><button class="btn btn-primary m-4 btn-color-blue-crayola btn-lg text-center">Make a Quiz</button></a> --}}
    <a href="./leaderboard"><button class="btn btn-primary m-4 btn-color-forest btn-lg text-center">View Leaderboards</button></a>
</div>
<div>
    <h3 class="text-center m-4">Recent Scores</h3>
    <!-- Replace table info with variables -->
    {{#if activeUser.scores}}
    {{!-- {{#each activeUser as | user |}}
        {{> recentScores}}
    {{/each}} --}}
    <div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name of Quiz</th>
                    <th scope="col">Category</th>
                    <th scope="col">Score</th>
                </tr>
            </thead>
            <tbody>
                {{> userRecentScores}}
            </tbody>
        </table>
    </div>
    {{/if}}
</div>
<script src="../public/js/account.js" type="text/javascript"></script> 
